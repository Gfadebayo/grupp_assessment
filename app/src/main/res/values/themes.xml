<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProductExplorer" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:colorBackground">#FFF2F2F7</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/TextView.Default</item>
        <item name="android:textAppearance">@style/TextAppearance.Default</item>
        <item name="textAppearanceBody1">@style/TextAppearance.List.Title</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.List.Price</item>
    </style>

    <style name="TextView.Default" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">@style/TextAppearance.Default</item>
    </style>
</resources>